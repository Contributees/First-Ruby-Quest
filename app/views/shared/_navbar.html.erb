<% resource_name ||= :user %>
<nav class="bg-dark h-[100px] p-2">
  <div class="mx-auto max-w-8xl px-4 sm:px-6 lg:px-8 h-full">
    <div class="flex h-full justify-between">
      <div class="flex">
        <div class="flex flex-shrink-0 items-center py-2">
          <%= link_to root_path, class: "h-full" do  %>
            <%= image_tag "logo-black.png", class: "w-auto h-full"  %>
          <% end %>
        </div>
      </div>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <% if user_signed_in? %>
            <!-- Display "Dashboard" link when signed in -->
            <%= link_to "Dashboard", dashboard_path, class: "no-underline inline-flex items-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm" %>
            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "no-underline inline-flex items-center rounded-md bg-error px-3 py-2 text-sm font-semibold text-white shadow-sm" %>
            </li>
          <% else %>
            <%= link_to "Log in", new_user_session_path, class: "no-underline inline-flex items-center rounded-md bg-success px-3 py-2 text-sm font-semibold text-white shadow-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
