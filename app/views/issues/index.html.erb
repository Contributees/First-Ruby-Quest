<% resource_name ||= :user %>

<div class="bg-silver py-36">
  <div class="container mx-auto flex justify-between">
    <div>
      <h1 class="text-white text-shadow  font-bold mb-0">First Ruby Quest</h1>
      <h3 class="text-white text-shadow text opacity-70 mt-2">Become an open source hero by <br>tackling beginner-friendly issues</h3>
    </div>
    <div class="flex flex-col items-center justify-center">
      <%= image_tag "github-mark", width: 100, class: "w-24" %>
      <div class="mt-4">
        <%= link_to "Get help on an issue", new_issue_path, class: "btn bg-secondary text-white px-4 py-2 mr-2" %>
        <% unless user_signed_in? %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "no-underline inline-flex items-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container container-1 mt-5">
  <p class="mb-0 text-lg"><%= image_tag "ruby_search", width: 30, class: "inline" %> New to open source? Check out our <%= link_to "guide", guide_path %> for first-time contributors!</p>
</div>

<div class="container pt-5 issues-container">
  <div class="search" data-controller="tags clear"   data-tags-tags-value="<%= @tags %>">
    <%= render "form" %>
  </div>
  <!-- Issue Cards -->
  <div class="">
    <% if @issues.empty? %>
      <p>No bookmarked issues found for the applied filters.</p>
    <% else %>
      <% @issues.each do |issue| %>
        <%= render "shared/cards", issue: issue %>
      <% end %>
    <% end %>

    <%= paginate @issues %>
  </div>
</div>
