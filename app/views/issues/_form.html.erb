<%= form_with url: "/", method: :get, data: {clear_target: "form"} do |form| %>
   <div class="max-w-xl lg:max-w-lg mb-4">
        <h2 class="text-1xl font-bold tracking-tight text-white sm:text-2xl">Search by keywords</h2>
        <div class="mt-2 flex max-w-md gap-x-4">
            <%= form.text_field :query, placeholder: "gem, concurrency, stimulus, etc.", class: "min-w-0 flex-auto rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6", value: params[:query] %>
        </div>
      </div>

<!------------------------------->

  <div class="mb-4">
    <h4 class="">Type of quest</h4>
    <%= radio_button :issue, :category, "", id: "category-indifferent", class: "btn-check", checked: params[:issue] && params[:issue][:category] == "" %>
    <label class="btn btn-outline-info me-1" for="category-indifferent">All</label>

    <%= radio_button :issue, :category, "open-source", id: "open-source", class: "btn-check", checked: params[:issue] && params[:issue][:category] == "open-source" %>
    <label class="btn btn-outline-secondary me-1" for="open-source"><i class="fa-brands fa-github me-2"></i></i><span>Open Source</span></label>

    <%= radio_button :issue, :category, "call_to_action", id: "call-to-action", class: "btn-check", checked: params[:issue] && params[:issue][:category] == "call-to-action"  %>
    <label class="btn btn-outline-warning me-1" for="call-to-action"><i class="fa-solid fa-hand-holding-hand me-2"></i></i><span>Personal</span></label>
  </div>

  <div class="mb-4">
    <h4 class="">Assignment Status</h4>
    <%= radio_button :issue, :assigned, "", id: "assigned-indifferent", class: "btn-check", checked: params[:issue] && params[:issue][:assigned] == "" %>
    <label class="btn btn-outline-info me-1" for="assigned-indifferent">All</label>

    <%= radio_button :issue, :assigned, true, id: "assigned", class: "btn-check", checked: params[:issue] && params[:issue][:assigned] == "true" %>
    <label class="btn btn-outline-info me-1" for="assigned"><i class="fa-solid fa-user-check me-2"></i></i><span>Assigned</span></label>

    <%= radio_button :issue, :assigned, false, id: "unassigned", class: "btn-check", checked: params[:issue] && params[:issue][:assigned] == "false"  %>
    <label class="btn btn-outline-info me-1" for="unassigned"><i class="fa-solid fa-user-large-slash me-2"></i><span>Unassigned</span></label>
  </div>
  <div class="mb-4">
    <h4 class="">Github Tags</h4>
    <%= form.text_field :tags, data: {tags_target: "input", tags_action: "keyup->tags#updateTags"} %>
  </div>
  <div class="form-group">
    <%= form.submit "Search", class: "btn btn-ouline-primary btn-search px-5 me-2 d-inline-flex" %>
    <%= button_tag "Clear", type: "button", class: "btn btn-secondary", data: {action: "click->clear#refresh"} %>
  </div>
<% end %>
